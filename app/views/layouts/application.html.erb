<!DOCTYPE html>
<html>
<head>
  <title>SassyArt</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="main">
    <!-- SHOW STATUS OF LOG IN -->
    <% if current_user %>
      <p>Welcome, <%=current_user.email%>!</p> 
      <%=link_to 'Sign Out', sessions_path, method: :delete %>
      <%=link_to 'Delete Account', user_path(current_user), {method: :delete, confirm: "Are you really really really sure bud?"} %>
    <% else %>
      <%=link_to 'Log in', new_sessions_path if !@is_login %>
      <%=link_to 'Sign Up', new_user_path if !@is_signup%>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
